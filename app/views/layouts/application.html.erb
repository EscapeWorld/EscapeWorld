<!DOCTYPE html>
<html>
<head>
  <title>EscapeWorld</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render "layouts/navigation" %>

  <div class="container">
    <div id="map_canvas"><div class='animate-target animated alternate iteration zoomOut'></div></div>

    <div class="content">
      <%= yield %>
    </div>

    <%= render "layouts/footer" %>
  </div>
</body>
</html>
