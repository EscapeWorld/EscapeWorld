<p id="notice"><%= notice %></p>

<h1><%= @location.name %> <small>by <%= link_to @location.company.name, company_path(@location.company) %></small></h1>

<p>
  <strong>Description:</strong>
  <%= @location.description %>
</p>

<%= @location.street %>
<%= @location.city %>, <%= @location.state %>, <%= @location.zip %>


<p>
  <strong>Email:</strong>
  <%= @location.email %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @location.phone %>
</p>

<p>
  <strong>Opens</strong>
  <%= @location.start_time.strftime('%I:%M %p') %>

  <strong>Closes</strong>
  <%= @location.end_time.strftime('%I:%M %p') %>
</p>

<hr />

<h3>Rooms:</h3>
<ul>
  <% @rooms.each do |room| %>
    <li><%= link_to room.name, room_path(room) %></li>
  <% end %>
</ul>

<%= link_to 'Back', locations_path %>
